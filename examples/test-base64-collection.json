{
  "info": {
    "name": "Base64 Test Collection",
    "_postman_id": "test-b64",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "https://api.example.com" },
    { "key": "apiKey", "value": "sk-test-12345" }
  ],
  "item": [
    {
      "name": "Upload Document",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/documents",
          "host": ["{{baseUrl}}"],
          "path": ["documents"]
        },
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{apiKey}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"fileName\":\"report.pdf\",\"documentId\":\"doc-001\",\"content\":\"\"}"
        }
      }
    },
    {
      "name": "Update Document",
      "request": {
        "method": "PUT",
        "url": {
          "raw": "{{baseUrl}}/documents/doc-001",
          "host": ["{{baseUrl}}"],
          "path": ["documents", "doc-001"]
        },
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"content\":\"\",\"version\":2}"
        }
      }
    },
    {
      "name": "Upload Attachment",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/attachments",
          "host": ["{{baseUrl}}"],
          "path": ["attachments"]
        },
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\":\"image.png\",\"fileData\":\"\"}"
        }
      }
    },
    {
      "name": "Get Document",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/documents/doc-001",
          "host": ["{{baseUrl}}"],
          "path": ["documents", "doc-001"]
        },
        "header": [
          { "key": "Accept", "value": "application/json" }
        ]
      }
    }
  ]
}
